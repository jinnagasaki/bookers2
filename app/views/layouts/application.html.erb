<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- ヘッダー -->
 <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span class="glyphicon glyphicon-book">Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      <!-- サインイン済み　ヘッダー -->
       <% if user_signed_in? %>
       	<ul class="nav navbar-nav navbar-right">
          <li><%= link_to ' Home', user_path(current_user.id), class:"glyphicon glyphicon-home" %></li>
          <li><a class="glyphicon glyphicon-user" href="/users"> Users</a></li>
          <li><a class="glyphicon glyphicon-book" href="/books/new"> Books</a></li>
          <li><a class="glyphicon glyphicon-log-out" rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a></li>
      	</ul>

       <% else %>
      	<!-- 未ログイン　ヘッダー -->
          <li><a class="glyphicon glyphicon-home" href="/"> Home</a></li>
          <li><a class="glyphicon glyphicon-link" href="/home/about"> About</a></li>
          <li><a class="glyphicon glyphicon-edit" href="/users/sign_up"> sign up</a></li>
          <li><a class="glyphicon glyphicon-log-in" href="/users/sign_in"> login</a></li>
       <% end %>
      </ul>
    </nav>
  </div>
</header>

    <%= yield %>


<!-- フッター -->
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

  </body>
</html>
