<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">

      <!--  左カラム  -->
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag current_user, :image, size: '100x100', class:"attachment user profile_image fallback" %>
        <table class="table">
          <tbody>
            <tr></tr> 
            <tr>
              <th>name</th>
              <th><%= current_user.name  %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction  %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to"", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        </div>
        <h2>New book</h2>
        <%= form_for(@book) do |f| %>

        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"col-xs-12" %>
        </div>
        <div class="field row">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"col-xs-12", :maxlength => "200" %>
        </div>
        <div class="actions row">
          <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
        <% end %> 
      </div>

      <!-- 右カラム -->
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr> 
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td> <%= attachment_image_tag(book.user, :image, size: '50x50',  fallback: "no_image.jpg", class:"attachment user profile_image") %></td>
              <td> <%= book.user_id %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td>
                <%= link_to "Show", book_path(book) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

