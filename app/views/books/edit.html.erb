<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
     <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>
      <div class="field row">
       <label for="book_title">Title</label>
       <%= f.text_field :title %>
     </div>
     <div class="field row">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions row">
      <%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
    </div>
    <% end %>
    <%= link_to "Show", book_path(@book)%>
    |
    <a href="/books/new">Back</a>
  </div>
  <div class="col-md-3"></div>
</div>
</div>
</div>
